<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_item_card_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/element_spacing_super_small"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/element_spacing_small"
        android:showDividers="middle"
        android:divider="@drawable/layout_divider_ver_super_small"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/order_item_layout"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">
            h<ImageView
                android:id="@+id/order_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:textSize="@dimen/font_small"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/order_item_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:textSize="@dimen/font_small"
            android:lines="1"
            android:ellipsize="end"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_medium">
            <TextView
                android:id="@+id/order_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/font_small"
                android:text="RM 0.00"/>
            <TextView
                android:id="@+id/order_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/bree_serif"
                android:textSize="@dimen/font_small"
                android:text="x1"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>