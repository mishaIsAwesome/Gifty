<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/element_spacing_small"
    android:orientation="vertical"
    android:backgroundTint="@color/colorPrimarySuperDark"
    android:background="@drawable/rounded_rect_dashed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_spacing_big"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/card_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/element_spacing_small"
            android:layout_marginEnd="@dimen/element_spacing_small"
            android:fontFamily="@font/josefin_sans_bold"
            android:textSize="@dimen/font_big"/>
        <ImageView
            android:id="@+id/card_service_image"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans"
            android:textSize="@dimen/font_medium"/>
        <TextView
            android:id="@+id/card_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/josefin_sans"
            android:textSize="@dimen/font_medium"/>
    </RelativeLayout>

</LinearLayout>